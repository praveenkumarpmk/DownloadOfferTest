<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/animoverlay"
        android:layout_margin="@dimen/screen_margin">

        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/offer_one" />

        <TextView
            android:id="@+id/tvPopular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvMerchantName"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tvMerchantName"
            android:background="@color/rose_color"
            android:gravity="center"
            android:text="@string/label_popular"
            android:textColor="@color/white" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvHrs"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvHrs"
            android:layout_gravity="bottom|end"
            app:srcCompat="@android:drawable/ic_dialog_map" />

        <TextView
            android:id="@+id/tvOfferDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvHrs"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/dimen_27"
            android:maxLines="3"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/teal_new_brand" />

        <TextView
            android:id="@+id/tvMerchantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvHrs"
            android:layout_alignBottom="@+id/tvHrs"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/font_size_normal"
            />

        <TextView
            android:id="@+id/tvHrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_19"
            android:text="@string/label_duration"
            android:maxLines="1"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tvHrs"
        android:background="@color/text_subtitle_light" />

</LinearLayout>