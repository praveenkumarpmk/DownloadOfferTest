<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Non focused states
     -->
    <item android:drawable="@drawable/btn_unfocussed" android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:state_enabled="true"/>
